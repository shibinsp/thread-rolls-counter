# Production Environment Configuration
# IMPORTANT: Update all values before deploying to production

# Database Configuration
DATABASE_URL=postgresql://postgres:YOUR_SECURE_PASSWORD@localhost:5432/thread_production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# Application Settings
SECRET_KEY=GENERATE_NEW_SECRET_KEY_FOR_PRODUCTION
DEBUG=False
LOG_LEVEL=INFO

# Admin Configuration
ADMIN_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# CORS Configuration (your production domains)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# File Upload Limits
MAX_FILE_SIZE_MB=10

# Security
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com
